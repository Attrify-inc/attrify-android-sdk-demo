<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnStart"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="start Attrify SDK" />

        <Button
            android:id="@+id/btnUpdateConsent"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="update consent" />

        <Button
            android:id="@+id/btnTrackSimpleEvent"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="track simple event" />

        <Button
            android:id="@+id/btnTrackAdvancedEvent"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="track advanced event" />

        <Button
            android:id="@+id/btnTrackDedupEvent"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="track dedup event" />

    </LinearLayout>

</ScrollView>